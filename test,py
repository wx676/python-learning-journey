# test_all_libraries.py
print("=== Python环境验证 ===")
import sys
print(f"Python路径: {sys.executable}")
print(f"Python版本: {sys.version}")

print("\n=== 数据处理库 ===")
try:
    import pandas as pd
    import numpy as np
    import polars as pl
    print("✅ pandas, numpy, polars 全部导入成功")
except ImportError as e:
    print(f"❌ 导入失败: {e}")

print("\n=== 可视化库 ===")
try:
    import matplotlib.pyplot as plt
    import seaborn as sns
    import plotly.express as px
    print("✅ matplotlib, seaborn, plotly 全部导入成功")
except ImportError as e:
    print(f"❌ 导入失败: {e}")

print("\n=== 工业专用库 ===")
try:
    import pywt
    import statsmodels.api as sm
    import scipy
    print("✅ pywt, statsmodels, scipy 全部导入成功")
except ImportError as e:
    print(f"❌ 导入失败: {e}")

print("\n🎉 所有库配置完成！可以开始项目开发了！")